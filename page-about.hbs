{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}

{{> "site-nav"}}

{{!-- Everything inside the #post tags pulls data from the post --}}


<div class="mobile-about d-block d-md-none">
    <div class="row justify-content-center">
            {{#if @blog.logo}}
                <div class="col-xs-12">
                    <img class="mobile-about-logo img-responsive mx-auto d-block" src="{{@blog.logo}}" />
                </div>
                <div class="col-xs-12 index-text">
                    <p class="mobile-about-description">{{@blog.description}}</p>
                </div>
                {{else}}
                <div class="col-xs-12" style="width: 100%;">
                    <p class="mobile-about-description">{{@blog.description}}</p>
                </div>
                {{/if}}
    </div>
</div>



<div class="pages">
    <div class="row">
        <div class="col-xs-12 col-md-9">
            {{#post}}
            <main>
                <div class="pages-header">
                     {{#if feature_image}}
                        <figure class="post-full-image" style="background-image: url({{feature_image}})">
                        </figure>
                    {{/if}}
                    <header>
                        <h1 class="post-full-title" style="margin:0px">{{title}}</h1>
                    </header>
                </div>   
                <div class="pages-content">
                        <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
                            <section class="post-full-content">
                                {{content}}
                            </section>
                        </article>
                </div>
            </main>
            {{/post}}
        </div>
        <div class="col-xs-12 col-md-3">
            {{>"desktop-nav"}}
        </div>
    </div>
</div>


