{{!< default}}
{{> "site-nav"}}


<div class="posts">
    <div class="row">
        <div class="col-xs-12 col-lg-9">
            {{#post}}
            <div class="post-body">
            <article class="{{post_class}}">
                <div class="post-header">
                    <!--
                    {{#if feature_image}}
                        <figure class="posts-image" style="background-image: url({{feature_image}})">
                        </figure>
                    {{/if}}
                    -->
                    <h1 class="post-full-title">{{title}}</h1>
                    <section>
                       
                        {{#if tags}}
                         <p style="margin: 0px">Tags: 
                            {{#foreach tags}}
                                <a href="{{url}}" title="{{name}}">{{name}}</a>
                            {{/foreach}}
                        {{/if}}
                        </p>
                         <p style="margin: 0px" class="post-card-date">{{date published_at format="MMMM DD, YYYY"}}</p>
                         <a style="text-decoration: none" class="comments-link" href="{{url}}#comments"><p class="post-card-date">  Comments</p> </a>
                    </section>
                </div>
                <div class="post-content img-responsive" >
                            {{content}}
                </div>         
            </article>
            </div>
            <div id="comments">
                
                <!-- Empty Div for future comments section -->
            </div>
            {{/post}}
        </div>
        <div class="col-xs-12 col-lg-3">
            {{>"desktop-nav"}}
        </div>
    </div>
</div>
